extends layout 

block content 
    form(action=`/passwordReset/${token}/${userId}` method='POST')
        label(for='password') Nouveau mot de passe :
        input(type='password' id='password' name='password' required)
        br
        label(for='confirmPassword') Confirmer le mot de passe :
        input(type='password' id='confirmPassword' name='confirmPassword' required)
        br
        button(type='submit').btn-success Valider
    if messageErreur
        p= messageErreur